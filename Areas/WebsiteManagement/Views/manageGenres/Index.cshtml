@model List<hypster_tv_DAL.MusicGenre>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_WebsiteManagement.cshtml";
}




<div style=" float:left; width:28%; min-height:630px; background-color:#353535; border-radius:3px; padding:1%; text-align:left;">
    

    <div style=" float:left; width:100%;">
        <h2 style=" margin-bottom:5px;">Manage Genres</h2>
    </div>


    <div style=" float:left; width:100%;">
        
        @using (Html.BeginForm("AddNewGenre", "manageGenres"))
        {
            <div style=" float:left; width:100%; margin-top:5px;">
                <input type="text" name="GenreName" id="GenreName" value="" style=" float:right; width:200px;" />
                <div style=" float:right; ">Genre Name </div>
            </div>
            
            <div style=" float:left; width:100%; margin-top:5px;">
                <input type="text" name="PlaylistID" id="PlaylistID" value="" style=" float:right; width:200px;" />
                <div style=" float:right; ">Playlist ID </div>
            </div>
            
            <div style=" float:left; width:100%; margin-top:5px;"> 
                <input type="text" name="Username" id="Username" value="" style=" float:right; width:200px;" />
                <div style=" float:right; ">User Name </div>
            </div>
            
            
            <div style=" float:left; width:100%; margin-top:5px;">
                <input type="submit" value="Add New Genre" style=" float:right;" />
            </div>
        }
    </div>
   

</div>




<div style=" float:left; width:67%; min-height:630px; background-color:#353535; border-radius:3px; padding:1%; margin-left:1%; text-align:left; ">

     <div style=" float:left; width:100%; ">
        <div style=" float:left; width:165px; font-weight:bold; margin-left:10px;">GenreName</div>
        <div style=" float:left; width:90px; font-weight:bold;">Playlist_ID</div>
        <div style=" float:left; width:120px; font-weight:bold;">User_ID</div>
    </div>
    @foreach (var item in Model)
    {  
        <div style=" float:left; width:100%; height:25px; line-height:25px; background-color:#232323; margin-top:2px; ">
            
            <div id="DispGenre_@(item.Genre_ID)">
                <div style=" float:left; width:160px; margin-left:10px;">@item.GenreName</div>
                <div style=" float:left; width:70px; margin-left:10px;">@item.Playlist_ID</div>
                <div style=" float:left; width:70px; margin-left:10px;">@item.User_ID</div>
                <div onclick="$('#EditGenre_@(item.Genre_ID)').css('display','block'); $('#DispGenre_@(item.Genre_ID)').css('display','none');" style=" float:left; width:70px; margin-left:10px; font-weight:bold; cursor:pointer;">EDIT</div>
            </div>

            <div id="EditGenre_@(item.Genre_ID)" style=" display:none;">
                @using (Html.BeginForm("SaveGenre", "manageGenres", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <input type="hidden" name="Genre_ID" id="Genre_ID" value="@item.Genre_ID" />
                    <input type="text" name="GenreName" id="GenreName" value="@item.GenreName" style=" float:left; width:170px; height:18px;" />
                    <input type="text" name="Playlist_ID" id="Playlist_ID" value="@item.Playlist_ID" style=" float:left; width:70px; height:18px;" />
                    <input type="text" name="User_ID" id="User_ID" value="@item.User_ID" style=" float:left; width:70px; height:18px;" />
                    <div style=" float:left;">username:</div>
                    <input type="text" name="Username" id="Username" value="" style=" float:left; width:70px; height:18px;" />
                    
                    <input type="submit" value="Save" style=" background-color:#FCF088;" />
                    <input type="button" value="Cancel" onclick="$('#EditGenre_@(item.Genre_ID)').css('display','none'); $('#DispGenre_@(item.Genre_ID)').css('display','block');" />
                    <input type="button" value="Del" onclick="if(confirm('Are you sure you want to delete?')){window.location='/WebsiteManagement/manageGenres/DeleteGenre/@item.Genre_ID';}" />
                    
                    <input type="file" name="ImageThumb" id="ImageThumb" style=" width:70px;" />
                }
            </div>

        </div>
    }

       
</div>