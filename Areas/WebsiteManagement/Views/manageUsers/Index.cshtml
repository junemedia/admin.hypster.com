@model List<hypster_tv_DAL.Member>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_WebsiteManagement.cshtml";
}


<div style=" float:left; width:28%; min-height:630px; background-color:#353535; border-radius:3px; padding:1%; text-align:left;">
    
    <div style=" float:left; width:100%;">
        <h2 style=" margin-bottom:5px;">Find Users</h2>
    </div>


    <div style=" float:left; width:100%; text-align:right; line-height:27px;">
        @using(Html.BeginForm()){
            
            <select id="SearchFor" name="SearchFor" style=" width:320px;">
                <option value="serUserName" >User Name</option>
                <option value="serUserEmail" >Email</option>
                <option value="serUserID" >User ID</option>
            </select>
            
            <input type="text" id="serUserPar" name="serUserPar" style=" width:310px; height:18px;" /><br />
            <input type="submit" value="Search" style=" width:75px; height:27px;" />
        }
    </div>


    <div style=" float:left; width:100%; height:470px; overflow:scroll; overflow-x:hidden; margin-top:15px; ">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div onclick="window.location='/WebsiteManagement/manageUsers/user/@item.id';" style=" float:left; width:100%; min-height:25px; line-height:25px; background-color:#656565; cursor:pointer;">
                    &nbsp;@item.id &nbsp;&nbsp;@item.email
                </div>
            }                                                          
        }
    </div>

</div>




<div style=" float:left; width:67%; min-height:630px; background-color:#353535; border-radius:3px; padding:1%; margin-left:1%; text-align:left; ">
   
</div>
