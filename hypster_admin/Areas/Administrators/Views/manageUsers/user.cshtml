@model hypster_tv_DAL.Member

<div style="float:left; min-height:630px; background-color:#353535; border-radius:3px; padding:1%; text-align:left;">    
    @using (Html.BeginForm("user", "manageUsers", FormMethod.Post, new { onsubmit = "return validateUserInfo();" }))
    {
        <div style="float:left; width:100%; color:#FCF088;">
            <h2>&nbsp;@Model.name<br /></h2>
            <input name="MEM_ID" id="MEM_ID" type="hidden" value="@Model.id" />
        </div>

        <div style="float:left; width:100%;">
            <table id="manageUserTbl" style="width:100%;">
                <tr>
                    <td style="width:20%;text-align:right;font-weight:bold;">@Html.LabelFor(m => m.username, "Username: ")</td><td style="width:30%">@Html.TextBoxFor(m => m.username, new { @id = "username", @class = "newUser_fields" })</td>
                    <td style="width:20%;text-align:right;font-weight:bold;">@Html.LabelFor(m => m.password, "Password: ")</td>
                    <td style="width:30%">
                        <input type="password" id="password" class="newUser_fields" value="@Model.password" style="margin-left:2px;" onblur="$('#userPasswordHdn').val($('#password').val());" />
                        @Html.TextBoxFor(model => model.password, new { @id = "userPasswordHdn", style = "display:none" })
                    </td>
                </tr>
                <tr>
                    <td style="width:20%;text-align:right;font-weight:bold;">@Html.LabelFor(m => m.name, "Name: ")</td><td style="width:30%">@Html.TextBoxFor(m => m.name, new { @id = "name", @class = "newUser_fields" })</td>
                    <td style="width:20%;text-align:right;font-weight:bold;">@Html.LabelFor(m => m.email, "Email Address: ")</td><td style="width:30%">@Html.TextBoxFor(m => m.email, new { @id = "email", @class = "newUser_fields" })</td>
                </tr>
                <tr>
                    <td style="width:20%;text-align:right;font-weight:bold;">@Html.LabelFor(m => m.adminLevel, "Admin Level: ")</td>
                    <td style="width:30%">
                        @Html.DropDownListFor(model => model.adminLevel, new SelectList(
                            new List<Object>
                            {
                                new { Value = 0 , Text = "User" },
                                new { Value = 1 , Text = "Editor" },
                                new { Value = 2 , Text = "Admin"}
                            },
                            "Value", "Text",
                        0), new { @style = "width: 164px; height: 25px;" })                        
                    </td>
                </tr>
            </table>
        </div>
        <div style="float:left; width:100%; text-align:right; margin-top:30px;">
            <input type="submit" value="SAVE CHANGES" class="submit_btn" style="width:150px;" />
        </div>
    }
</div>
